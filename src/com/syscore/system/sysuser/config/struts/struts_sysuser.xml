<?xml version="1.0" encoding="UTF-8" ?>
	<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
	<struts>
	<package name="sysuserAction" extends="centuryStruts" namespace="/sysuser">

		<!-- 部门窗体 -->
		<action name="sysuserForm">
			<result name="success">/WEB-INF/system/sysuser.jsp</result>
		</action>
		
		
		<!-- 添加数据 -->
		<action name="insertSysuser" class="sysuserAction" method="insertSysuser">
			<result type="json">
				<param name="contentType">text/html</param>
				<param name="root">badusResponse</param>
			</result>
		</action>

		<!-- 删除数据 -->
		<action name="deleteSysuser" class="sysuserAction" method="deleteSysuser">
			<result type="json">
				<param name="contentType">text/html</param>
				<param name="root">badusResponse</param>
			</result>
		</action>

		<!-- 修改数据 -->
		<action name="updateSysuser" class="sysuserAction" method="updateSysuser">
			<result type="json">
				<param name="contentType">text/html</param>
				<param name="root">badusResponse</param>
			</result>
		</action>
		
		<!-- 数据查询 -->
		<action name="findSysuerByMap" class="sysuserAction" method="findSysuerByMap">
			<result type="json">
				<param name="contentType">text/html</param>
				<param name="root">badusResponse</param>
			</result>
		</action>
		 
		
		<!-- 分页查询 -->
		<action name="findSysuserByPage" class="sysuserAction" method="findSysuserByPage">
			<result type="json">
				<param name="contentType">text/html</param>
				<param name="root">badusResponse</param>
			</result>
		</action>
		
		<!-- 获取所有角色并标志人员已经选中的模块 -->
		<action name="findAllRoleAndMarkCheckedByUser" class="sysuserAction" method="findAllRoleAndMarkCheckedByUser">
			<result type="json">
				<param name="contentType">text/html</param>
				<param name="root">badusResponse</param>
			</result>
		</action>
		
		<!-- 设置人员分配角色 -->
		<action name="updateRolesToUser" class="sysuserAction" method="updateRolesToUser">
			<result type="json">
				<param name="contentType">text/html</param>
				<param name="root">badusResponse</param>
			</result>
		</action>
		 

	</package>
</struts>
