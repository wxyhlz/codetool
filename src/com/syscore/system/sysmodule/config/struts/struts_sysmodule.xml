<?xml version="1.0" encoding="UTF-8" ?>
	<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
	<struts>
	<package name="sysmoduleAction" extends="centuryStruts" namespace="/sysmodule">

		<!-- 模块窗体 -->
		<action name="sysmoduleForm">
			<result name="success">/WEB-INF/system/sysmodule.jsp</result>
		</action>
		
		<!-- 添加数据 -->
		<action name="insertSysmodule" class="sysmoduleAction" method="insertSysmodule">
			<result type="json">
				<param name="contentType">text/html</param>
				<param name="root">badusResponse</param>
			</result>
		</action>

		<!-- 删除数据 -->
		<action name="deleteSysmodule" class="sysmoduleAction" method="deleteSysmodule">
			<result type="json">
				<param name="contentType">text/html</param>
				<param name="root">badusResponse</param>
			</result>
		</action>

		<!-- 修改数据 -->
		<action name="updateSysmodule" class="sysmoduleAction" method="updateSysmodule">
			<result type="json">
				<param name="contentType">text/html</param>
				<param name="root">badusResponse</param>
			</result>
		</action>
		
		<!-- 数据查询 -->
		<action name="findSysmoduleByMap" class="sysmoduleAction" method="findSysmoduleByMap">
			<result type="json">
				<param name="contentType">text/html</param>
				<param name="root">badusResponse</param>
			</result>
		</action>

		<!-- 分页查询 -->
		<action name="findSysmoduleByPage" class="sysmoduleAction" method="findSysmoduleByPage">
			<result type="json">
				<param name="contentType">text/html</param>
				<param name="root">badusResponse</param>
			</result>
		</action> 

	</package>
</struts>
