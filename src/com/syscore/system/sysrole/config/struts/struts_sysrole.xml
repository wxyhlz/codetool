<?xml version="1.0" encoding="UTF-8" ?>
	<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
	<struts>
	<package name="sysroleAction" extends="centuryStruts" namespace="/sysrole">

		<!-- 角色窗体 -->
		<action name="sysroleForm">
			<result name="success">/WEB-INF/system/sysrole.jsp</result>
		</action>
		
		<!-- 添加数据 -->
		<action name="insertSysrole" class="sysroleAction" method="insertSysrole">
			<result type="json">
				<param name="contentType">text/html</param>
				<param name="root">badusResponse</param>
			</result>
		</action>

		<!-- 删除数据 -->
		<action name="deleteSysrole" class="sysroleAction" method="deleteSysrole">
			<result type="json">
				<param name="contentType">text/html</param>
				<param name="root">badusResponse</param>
			</result>
		</action>

		<!-- 修改数据 -->
		<action name="updateSysrole" class="sysroleAction" method="updateSysrole">
			<result type="json">
				<param name="contentType">text/html</param>
				<param name="root">badusResponse</param>
			</result>
		</action>
		
		<!-- 数据查询 -->
		<action name="findSysroleByMap" class="sysroleAction" method="findSysroleByMap">
			<result type="json">
				<param name="contentType">text/html</param>
				<param name="root">badusResponse</param>
			</result>
		</action>
		
		<!-- 单个查询 -->
		<action name="findSysroleByEntity" class="sysroleAction" method="findSysroleByEntity">
			<result type="json">
				<param name="contentType">text/html</param>
				<param name="root">badusResponse</param>
			</result>
		</action>

		<!-- 获取所有模块并标志角色已经选中的模块 -->
		<action name="findAllModulesAndMarkCheckedByRole" class="sysroleAction" method="findAllModulesAndMarkCheckedByRole">
			<result type="json">
				<param name="contentType">text/html</param>
				<param name="root">badusResponse</param>
			</result>
		</action>

		<!-- 设置角色分配模块 -->
		<action name="updateModulesToRole" class="sysroleAction" method="updateModulesToRole">
			<result type="json">
				<param name="contentType">text/html</param>
				<param name="root">badusResponse</param>
			</result>
		</action>

	</package>
</struts>
