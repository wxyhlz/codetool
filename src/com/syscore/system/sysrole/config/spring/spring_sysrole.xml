<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
			http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
	<!-- 角色DAO -->
	<bean id="com.syscore.system.sysrole.dao.ISysroleDao" class="com.syscore.system.sysrole.dao.impl.SysroleDao">
		<property name="sqlMapClient" ref="sqlMapClient" />
	</bean>

	<!-- 角色SERVICE -->
	<bean id="com.syscore.system.sysrole.service.ISysroleService" class="com.syscore.system.sysrole.service.impl.SysroleService">
		<property name="dao" ref="com.syscore.system.sysrole.dao.ISysroleDao" /> 
		
		<property name="sysmoduleService" ref="com.syscore.system.sysmodule.service.ISysmoduleService" /> 
		<property name="sysrolemoduleService" ref="com.syscore.system.sysrolemodule.service.ISysrolemoduleService" /> 
	</bean>

	<!-- 角色ACTION -->
	<bean id="sysroleAction" class="com.syscore.system.sysrole.action.SysroleAction" scope="prototype">
		<property name="service" ref="com.syscore.system.sysrole.service.ISysroleService" />
	</bean>
</beans>
