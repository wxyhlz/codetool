<?xml version="1.0" encoding="UTF-8" ?>
	<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
	<struts>
	<package name="projectAction" extends="centuryStruts" namespace="/project">

		<!-- 开发项目窗体 -->
		<action name="projectauthorForm">
			<result name="success">/WEB-INF/generate/project.jsp</result>
		</action>
		
		<!-- 新增 -->
		<action name="insertProject" class="projectAction" method="insertProject">
			<result type="json">
				<param name="contentType">text/html</param>
				<param name="root">badusResponse</param>
			</result>
		</action>

		<!-- 删除数据 -->
		<action name="deleteProject" class="projectAction" method="deleteProject">
			<result type="json">
				<param name="contentType">text/html</param>
				<param name="root">badusResponse</param>
			</result>
		</action>

		<!-- 修改 -->
		<action name="updateProject" class="projectAction" method="updateProject">
			<result type="json">
				<param name="contentType">text/html</param>
				<param name="root">badusResponse</param>
			</result>
		</action>

		<!-- 数据查询 -->
		<action name="findProjectByMap" class="projectAction" method="findProjectByMap">
			<result type="json">
				<param name="contentType">text/html</param>
				<param name="root">badusResponse</param>
			</result>
		</action>
		
		
		<!-- 数据库连接测试 -->
		<action name="dbconnect" class="projectAction" method="dbconnect">
			<result type="json">
				<param name="contentType">text/html</param>
				<param name="root">badusResponse</param>
			</result>
		</action>

	</package>
</struts>
