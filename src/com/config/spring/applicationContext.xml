<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
			http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<bean id="dataSource" class="org.springframework.jndi.JndiObjectFactoryBean">
		<property name="jndiName">
			<value>java:comp/env/jdbc/dotblue</value>
		</property>
	</bean>

	<!-- ibatis config -->
	<bean id="sqlMapClient" class="org.springframework.orm.ibatis.SqlMapClientFactoryBean">
		<property name="mappingLocations">
			<list>
				<!-- 代码 -->
				<value>classpath*:/com/syscore/generate/*/config/ibatis/**/*.xml</value>			 								  			
				<!-- 系统 -->  			
				<value>classpath*:/com/syscore/system/*/config/ibatis/**/*.xml</value>
			</list>
		</property>	
		<property name="configLocation"	value="WEB-INF/classes/com/config/ibatis/sqlMapConfig.xml" />
		<property name="dataSource" ref="dataSource" />
		
	</bean> 

	<!-- ehcache and spring -->
	<import	resource="classpath*:/com/config/spring/applicationContext_ehcache.xml" />
	<import	resource="classpath*:/com/config/spring/applicationContext_services.xml" /> 
	
	<!-- 代码 -->
	<import	resource="classpath*:/com/config/spring/spring_generate.xml" />
	
	<!-- 系统 -->
	<import	resource="classpath*:/com/config/spring/spring_system.xml" /> 

</beans>